{
  "name": "domain-os",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run dev --workspace=@domain-os/desktop",
    "build": "npm run build --workspace=@domain-os/core && npm run build --workspace=@domain-os/integrations && npm run build --workspace=@domain-os/desktop",
    "test": "npm test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  }
}
