{
  "name": "@domain-os/desktop",
  "version": "0.1.16",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "predev": "node ../../scripts/ensure-native.mjs electron",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf out dist coverage",
    "check-docs": "node scripts/check-docs-version.mjs",
    "package:mac": "node scripts/check-docs-version.mjs && node scripts/package.mjs --mac",
    "package:mac:arm64": "node scripts/check-docs-version.mjs && node scripts/package.mjs --mac --arm64",
    "package:mac:x64": "node scripts/check-docs-version.mjs && node scripts/package.mjs --mac --x64"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "better-sqlite3": "^11.10.0",
    "electron-updater": "^6.8.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "unpdf": "^1.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.0.6",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
